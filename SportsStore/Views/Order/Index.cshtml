@model List<OrderModel>


<div>
	<h1>Order List</h1>
	<table class="table">
		<thead>
			<tr>
				<th>Status</th><th>Customer Name</th><th>Create Date</th><th>Order Details</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var item in Model)
			{
				<tr>
					<td>@item.Status</td>
					<td>@item.CustomerName</td>
					<td>@item.CreateDate</td>
					<td>
						<form asp-action="OrderByDetails" asp-route-orderId="@item.Id" method="get">
							<input type="hidden" value="@Context.GetUrl()" name="returnUrl" />
							<button type="submit" class="btn btn-success">Detail</button>
						</form>
					</td>
				</tr>
			}
		</tbody>
	</table>
</div>
