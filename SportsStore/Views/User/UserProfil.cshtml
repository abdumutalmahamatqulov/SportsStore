@using Microsoft.IdentityModel.Tokens

@model SportsStore.Domain.Models.UserModel



<div>
    <h1 class="text-center">UserCheck</h1>
    <div style="display:flex;gap:7px">
        <table class="table">
            <thead>
                <tr>
                    <th>Role</th>
                    <th>name</th>
                    <th>email</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>
                        @if (@Model.Roles?.Count >= 1)
                        {
                            <p>@string.Join(", ", Model.Roles.Select(x => x.Role.Name))</p>
                        }
                    </td>

                    <td>@Model.Name</td>
                    <td>@Model.Email</td>
                </tr>
            </tbody>
        </table>
    </div>
    <div class="form-group">
        <form asp-action="UserProfil" method="post" >
            <input type="hidden" id="userId" name="userId" value="@Model.Id"/>
            <input type="hidden" name="returnUrl" value="@(ViewBag.ReturnUrl??"/UserProfil")" />
            <select  class="form-control" id="roleId" name="roleId">
                @foreach (var item in (List<RoleModel>)ViewBag.Roles)
                    {
                    
                        <option value="@item.Id" >@item.Name</option>
                    }
            </select>
            <button id="btn" class="btn btn-success" type="submit">Save</button>
        </form>
    </div>
</div>




























