@model SportsStore.Domain.Models.NewPasswordModel
@{
    ViewData["Title"] = "New Password";
}

<h1>@ViewData["Title"]</h1>

<form asp-controller="Auth" asp-action="NewPassword" method="post">
    <input asp-for="Email" class="form-control" type="hidden" />
    <div class="form-group">
        <label asp-for="Password" class="col-md-2 control-label"></label>
        <div class="col-md-2">
            <input asp-for="Password" class="form-control" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
    </div>
    <div>
        <input name="returnUrl" type="hidden" value="@(ViewBag.ReturnUrl??"/Auth/Login")" />
        <button type="submit" class="btn btn-success">New Password</button>
        <a asp-controller="Auth" asp-action="Login" asp-route-returnUrl="@ViewBag.ReturnUrl" class="btn btn-danger">Cancel</a>
    </div>
    <div asp-validation-summary="All" class="bg-outline-danger text-danger" />
</form>
